			<div class="col-sm-5" data-animation-direction="from-right" data-animation-delay="150">
				<div class="mapborder">
					<div id="map_agency" class="gmap">
						<%= image_tag('homeimage.png', class: "image-home") %>
					</div>
				</div>
			</div>
		</div>
