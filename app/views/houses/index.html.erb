	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="page-title">Biens de l'agence </h1>
				
				<ul class="breadcrumb">
					<li><%= link_to "Accueil", root_path %></li>
					<li><%= link_to 'Biens Immobiliers', houses_path %></li>
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- END PAGE TITLE/BREADCRUMB -->

<!-- BEGIN CONTENT WRAPPER -->
<div class="content">
	<div class="container">
		<div class="row">
		
			<!-- BEGIN MAIN CONTENT -->
			<div class="main col-sm-12">
				
				<!-- BEGIN PROPERTY LISTING -->
				<div id="property-listing" class="grid-style1 clearfix">
					<div class="row">
						<% @houses.each do |house| %>
							<div class="item col-md-4"><!-- Set width to 4 columns for grid view mode only -->
								<div class="image">
									<%= link_to house do %>
									  <span class="btn btn-default"><i class="fa fa-file-o"></i>Details</span>
									<% end %>
									<!-- Display the first photos uploaded -->
									<%= image_tag(house.pictures.first.image.url(:large), size: "360x317") %>
								</div>
								<div class="price">
									<% if house.type.name == "Maison" %>
										<i class="icon-house"></i> A vendre <span><%= get_price(house.price) + " â‚¬ FAI"%></span>
									<% else %>
										<i class="icon-apartment"></i> A vendre <span><%= get_price(house.price) + " â‚¬ FAI"%></span>
									<% end %>
								</div>
								<div class="info">
									<h3>
										<a href="properties-detail.html"><%= house.name %></a>
										<small><%= house.address %></small>
									</h3>
									<p size="150"><%= truncate(house.description, :length => 150) %></p>
								
									<ul class="amenities">
										<li><i class="icon-area"></i> <%= house.area %> m2</li>
										<li><i class="icon-bedrooms"></i> <%= house.room %></li>
										<li><i class="icon-bathrooms"></i> <%= house.bathroom %></li>
									</ul>
								</div>
							</div>
						<% end %>
					</div>
				</div>
				<!-- END PROPERTY LISTING -->
				
				
