<!-- BEGIN PAGE TITLE/BREADCRUMB -->
<div class="parallax colored-bg pattern-bg" data-stellar-background-ratio="0.5">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="page-title"><%= @house.name %></h1>
				
				<ul class="breadcrumb">
					<li><%= link_to "Accueil", root_path %></li>
					<li><%= link_to 'Biens Immobiliers', houses_path %></li>
					<li><%= link_to @house.name, @house %></li>
				</ul>

			</div>
		</div>
	</div>
</div>
<!-- END PAGE TITLE/BREADCRUMB -->

<!-- BEGIN CONTENT WRAPPER -->
<div class="content">
	<div class="container">
		<div class="row">
			<% if @house.type.name == "Terrain" %>
				<%= render partial: 'houses/field' %>
			<% elsif @house.type.name == "Maison" %>
				<%= render partial: 'houses/house' %>
			<% elsif @house.type.name == "Appartement" %>
				<%= render partial: 'houses/apartment' %>
			<% elsif @house.type.name == "Location" %>
				<%= render partial: 'houses/rental' %>
			<% end %>
		</div>
	</div>
</div>
<!-- END CONTENT WRAPPER